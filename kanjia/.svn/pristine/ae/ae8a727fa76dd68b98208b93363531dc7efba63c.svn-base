/*帮砍广播条*/
.helpBar{
	position: absolute;
    z-index: 999;
    width: 100%;
    line-height: .55rem;
    text-indent: .3rem;
    font-size: .3rem;
    color: #fff;
    background: rgba(0,0,0,0.4);
}
/*活动广告*/
.ad{
	width: 100%;
	height: 3rem;
  background: url('../img/index/ad01.jpg') no-repeat 50% 50%;
  background-size:cover;	
}
/*活动时间*/
.ativityTime{
	text-align: center;
}
.ativityTime span{
	display: block;
  line-height: .6rem;
  font-size: .3rem;
  color: #999;
}
.ativityTime .ativityTime-show{
	position: relative;
	top: -.14rem;
}
.ativityTime .ativityTime-show i{
  position: relative;
  top: .05rem;
  left: -1%;
  display: inline-block;
  width: .35rem;
  height: .35rem;
  background:url('../img/index/time1.png') no-repeat 50% 50%;
  background-size: cover;	
}
.ativityTime .ativityTime-show span{
	font-size: .3rem;
	color: #333;
	line-height: .6rem;
}

/*=========活动商品列表==========*/
    
   .shopList{ 
   	    background: #fff;
   	    margin-top: -.14rem;
   }
   .shopList ul {
        clear: both;
   	    margin: 0 .3rem 1.2rem .3rem;
   }
   .shopList ul li{
        clear: both;
/*   	  height: 2.3rem;
   	    border-bottom: 1px solid #CCC;
   	    margin-bottom: 0.6rem;*/
   }
   .shopList ul li:first-child{
   	    padding-top: .1rem;
   }
   /*左边商品图片*/
  .shopList-left{
  	float: left;
    position: relative;
    width: 30%;
    clear: both;
  }
   .shopList-left span{
      float: left;
   	  display: inline-block;
	    width: 90%;
	    height: 2rem;
   	  background:url('../img/index/shop1.png') no-repeat 50% 50%;
		  background-size:contain;		    
   }
    /*右边商品desc*/
   .shopList-right{
    height: auto;
    float: left;
    width: 70%;
    margin-bottom: .3rem;
   }
   .shopList-right h5{
    font-size: .335rem;
    letter-spacing: 0rem;
    word-spacing: 0rem;
    word-wrap: break-word;
    word-break: break-all;
    text-overflow: ellipsis;
   }
   /*商品价格*/
   .shopList-right .shopPrice{
   	    margin-top: .1rem;
        float: left;
   }
   .shopPrice .minPrice{
   	   font-size: .15rem;
   	   margin-top: .2rem;
   }
   .minPrice label{
	   	display: inline-block;
	   	margin-right:.1rem ;
	   	background: red;
	   	color: #fff;
	    font-size: .24rem;
	    padding: .05rem;
	    border-radius: .05rem;
   }
   .minPrice i,.minPrice span{
   	   font-size: .35rem;
       color: red;
   }
   .marketPrice {
      color: #666;
      font-size: .6rem;
      line-height: .5rem;

   }
   
   .marketPrice i{
   	    font-size: .3rem;
   }
   .marketPrice label{
   	    font-size: .3rem;
   }
   .marketPrice span{
   	   font-size: .3rem;
   }
   /*立即砍价*/
   .shopList-right .putPrice{
      float: right;
	    margin-top: 1rem;
	    font-size: .25rem;
	    background: rgb(254,132,47);
	    color: #fff;
	    width: 1.4rem;
	    line-height: .6rem;
	    text-align: center;
	    border-radius: .05rem;
   }
   .shopList-right .put{
   		background: #999999;
   }
   /*排行榜&&我的砍价*/
  .footer{
  	position: fixed;
    bottom: 0;
    width: 100%;
    height: 1rem;
    font-size: .35rem;
    color: #888;
    border-top: 1px solid #888;
    line-height: 1rem;
    background: #fff;
  }
  /*排行榜*/
 .rankingList{
 	float: left;
    width: 49%;
    height: 80%;
    text-align: center;
    border-right: 1px solid #888;
    margin: .1rem 0;
 }
 .rankingList i{
 	display: inline-block;
    width: .5rem;
    height: .5rem;
 	background:url('../img/index/jiang01.png') no-repeat 50% 50%;
	background-size: cover;		    
 }
 .rankingList span,.myBargain span{
 	position: relative;
 	top: -.1rem;
 }
 /*我的砍价*/
 .myBargain{
	float: right;
    width: 50%;
    height: 80%;
    text-align: center;
    margin: .1rem 0;
 }
 .myBargain i{
  	display: inline-block;
    width: .5rem;
    height: .5rem;
 	background:url('../img/index/mykan.png') no-repeat 50% 50%;
	background-size: cover;		    
 }