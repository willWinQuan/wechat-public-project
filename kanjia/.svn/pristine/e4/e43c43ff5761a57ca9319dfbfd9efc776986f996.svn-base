/*菜单*/
.mianNav{
	margin-top: .3rem;
}
.mianNav ul{
	margin-left: .8rem;
}
.mianNav ul li{
	float: left;
    font-size: .95rem;
    color: #666;
    line-height: 3rem;
    margin-right: 5.2rem;
}
.mianNav ul li:last-child{
	float: right;
	margin-right: .3rem;
}
/*帮砍列表*/
.helpList li{
	border-top: 1px solid #ccc;
	clear: both;
}
/*左边*/
.helpList-left{
	float: left;
}
/*奖牌 || 排名*/
.helpList-left i{
	display: inline-block;
    width: 1.8rem;
    height: 2.8rem;
    font-size: 1.4rem;
    text-align: center;
    margin: .5rem .8rem;
}
/*排名*/
.ranking{
	display: inline-block;
    position: relative;
    top: -1.3rem;
    width: 1.8rem;
    color: #888;
    font-size: 1.3rem;
    text-align: center;
    margin: 0.5rem .8rem
}

.helpList-left i[name="frist"]{
background:url('../img/index/frist01.png') no-repeat 50% 50%;
	background-size: cover;
}
.helpList-left i[name="sencond"]{
background:url('../img/index/sencond01.png') no-repeat 50% 50%;
	background-size: cover;
}
.helpList-left i[name="three"]{
background:url('../img/index/three01.png') no-repeat 50% 50%;
	background-size: cover;
}
/*头像*/
.helpList-left .user-img{
	display: inline-block;
    width: 3rem;
    height: 3rem;
    line-height: 5rem;
    margin: .5rem 1.05rem;
    margin-left: 0;
    border-radius: 100%;
	background:url('../img/index/person01.png') no-repeat 50% 50%;
    background-size: cover;	
}
/*==用户==*/
/*名字*/
.List-user{
	float: right;
	margin-top: 1rem;
}
.List-user span{
	display: block;
	font-size: 1rem;
}
.List-user em{
	display: block;
	font-size: .8rem;
	color: #888;
}
/*右边*/
.helpList-right{
	float: right;
	line-height: 4rem;
    color: #888;
    font-size: 1rem;
    margin-right: .3rem;
}
/*底部我的排名*/
.myHelpKan{
	position: fixed;
    width: 100%;
    bottom: 0;
    border-top: 1px solid #ccc;
}