		}
	}
    function fileSelect() {
    	document.getElementById("fileToUpload").click(); 
    }
    function iframeLoad(iframe){
    	var doc = iframe.contentWindow.document;
    	var html = doc.body.innerHTML;
    	if(html != ''){
	    	var obj = eval("("+html+")") ;
	    	//判断返回的状态
	    	if(obj.error!=1000){
	    		alert(obj.data);
	    	}else{
	    		var str=obj.data;
	    		//var newstr=str.replace(/\/ig, '');
	    		//alert(newstr);
	    		$("#updatepic").attr("src",str);
	    		$("#pic_target").val(str);
	    	}
	    }
	}
    function fileSelected() {
    	$('#upload').submit();
    }
    function check_form(){
    	if(!$("input[name='title']").val()){
    		alert("缺少标题");
    		return false;
    	}
    	if(!$("input[name='begintime']").val()){
    		alert("缺少开始时间");
    		return false;
    	}
    	if(!$("input[name='endtime']").val()){
    		alert("缺少结束时间");
    		return false;
    	}
    	if($("input[name='begintime']").val()==$("input[name='endtime']").val()){
    		alert("活动时间设置有误");
    		return false;
    	}
    	if(!$("input[name='a_n']").val()){
    		alert("缺少可报名次数");
    		return false;
    	}
    	if(!$("input[name='s_p_a_n']").val()){
    		alert("缺少单个商品可报名次数");
    		return false;
    	}
    	if($("input[name='a_n']").val()!=0){
